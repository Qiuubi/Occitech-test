{% extends 'base.html.twig' %}

{% block title %}Pokedex
{% endblock %}

{% block body %}
	<h1>Pokedex</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Number</th>
				<td>{{ pokedex.number }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ pokedex.name }}</td>
			</tr>
			<tr>
				<th>FirstType</th>
				<td>{{ pokedex.firstType }}</td>
			</tr>
			<tr>
				<th>SecondType</th>
				<td>{{ pokedex.secondType }}</td>
			</tr>
			<tr>
				<th>Hp</th>
				<td>{{ pokedex.hp }}</td>
			</tr>
			<tr>
				<th>Attack</th>
				<td>{{ pokedex.attack }}</td>
			</tr>
			<tr>
				<th>Defense</th>
				<td>{{ pokedex.defense }}</td>
			</tr>
			<tr>
				<th>SpAttack</th>
				<td>{{ pokedex.spAttack }}</td>
			</tr>
			<tr>
				<th>SpDefense</th>
				<td>{{ pokedex.spDefense }}</td>
			</tr>
			<tr>
				<th>Speed</th>
				<td>{{ pokedex.speed }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_pokedex_index') }}">back to list</a>

	<a href="{{ path('app_pokedex_edit', {'id': pokedex.id}) }}">edit</a>

	{{ include('pokedex/_delete_form.html.twig') }}
{% endblock %}
